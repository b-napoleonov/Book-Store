@model DetailsBookViewModel

<div class="tab-pane fade active show" id="product-rating" role="tabpanel" aria-labelledby="product-rating-tab">
	<h2>Book Rating</h2>
	<span class="fa fa-star @(Model.Ratings.Rating >= 1 ? "checked" : string.Empty)"></span>
	<span class="fa fa-star @(Model.Ratings.Rating >= 2 ? "checked" : string.Empty)"></span>
	<span class="fa fa-star @(Model.Ratings.Rating >= 3 ? "checked" : string.Empty)"></span>
	<span class="fa fa-star @(Model.Ratings.Rating >= 4 ? "checked" : string.Empty)"></span>
	<span class="fa fa-star @(Model.Ratings.Rating >= 5 ? "checked" : string.Empty)"></span>
	<p>@Model.Ratings.Rating average based on @Model.Ratings.RatingsCount ratings.</p>
	<hr style="border:3px solid #f1f1f1">

	@if (Model.Ratings.RatingsCount != 0)
	{
		<div class="row">
			<div class="side">
				<div>5 star</div>
			</div>
			<div class="middle">
				<div class="progress">
					<div class="progress-bar bg-success" role="progressbar" style="width: @(Model.Ratings.FiveStarRating / Model.Ratings.RatingsCount * 100)%" aria-valuenow=@Model.Ratings.FiveStarRating aria-valuemin="0" aria-valuemax=@Model.Ratings.RatingsCount></div>
				</div>
			</div>
			<div class="side right">
				<div>@Model.Ratings.FiveStarRating</div>
			</div>
			<div class="side">
				<div>4 star</div>
			</div>
			<div class="middle">
				<div class="progress">
					<div class="progress-bar bg-success" role="progressbar" style="width: @(Model.Ratings.FourStarRating / Model.Ratings.RatingsCount * 100)%" aria-valuenow=@Model.Ratings.FourStarRating aria-valuemin="0" aria-valuemax=@Model.Ratings.RatingsCount></div>
				</div>
			</div>
			<div class="side right">
				<div>@Model.Ratings.FourStarRating</div>
			</div>
			<div class="side">
				<div>3 star</div>
			</div>
			<div class="middle">
				<div class="progress">
					<div class="progress-bar bg-success" role="progressbar" style="width: @(Model.Ratings.ThreeStarRating / Model.Ratings.RatingsCount * 100)%" aria-valuenow=@Model.Ratings.ThreeStarRating aria-valuemin="0" aria-valuemax=@Model.Ratings.RatingsCount></div>
				</div>
			</div>
			<div class="side right">
				<div>@Model.Ratings.ThreeStarRating</div>
			</div>
			<div class="side">
				<div>2 star</div>
			</div>
			<div class="middle">
				<div class="progress">
					<div class="progress-bar bg-success" role="progressbar" style="width: @(Model.Ratings.TwoStarRating / Model.Ratings.RatingsCount * 100)%" aria-valuenow=@Model.Ratings.TwoStarRating aria-valuemin="0" aria-valuemax=@Model.Ratings.RatingsCount></div>
				</div>
			</div>
			<div class="side right">
				<div>@Model.Ratings.TwoStarRating</div>
			</div>
			<div class="side">
				<div>1 star</div>
			</div>
			<div class="middle">
				<div class="progress">
					<div class="progress-bar bg-success" role="progressbar" style="width: @(Model.Ratings.OneStarRating / Model.Ratings.RatingsCount * 100)%" aria-valuenow=@Model.Ratings.OneStarRating aria-valuemin="0" aria-valuemax=@Model.Ratings.RatingsCount></div>
				</div>
			</div>
			<div class="side right">
				<div>@Model.Ratings.OneStarRating</div>
			</div>
		</div>
		<hr style="border:3px solid #f1f1f1">
	}
	<a type="button" class="fs-6 btn btn-success mb-3 p-2" asp-controller="Rating" asp-action="Add" asp-route-bookId="@Model.Id">
		<span>Add Rating</span>
	</a>
</div>
