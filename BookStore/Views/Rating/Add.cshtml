@model AddRatingViewModel

@{
	ViewBag.Title = "Add Rating";
}

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form asp-action="Add" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="UserRating"></label>
				<input asp-for="UserRating" class="form-control">
				<span asp-validation-for="UserRating" class="small text-danger"></span>
			</div>
			<div class="mb-3">
				<input class="btn btn-primary" type="submit" value="Add" />
			</div>
			<input type="hidden" name="bookId" value=@ViewData["BookId"]>
		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}