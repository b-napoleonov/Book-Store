@model UserProfileViewModel

<div class="page-content page-container" id="page-content">
	<div class="padding">
		<div class="row container d-flex justify-content-center">
			<div class="col-xl-6 col-md-12">
				<div class="card user-card-full">
					<div class="row m-l-0 m-r-0">
						<div class="col-sm-4 bg-c-lite-green user-profile">
							<div class="card-block text-center text-white">
								<div class="m-b-25">
									<img src="https://img.icons8.com/bubbles/100/000000/user.png" class="img-radius" alt="User-Profile-Image">
								</div>
								@if (Model?.FirstName == null || Model?.LastName == null)
								{
									<h6 class="f-w-600">@Model?.UserName</h6>
								}
								else
								{
									<h6 class="f-w-600">@(Model.FirstName + " " + Model.LastName)</h6> @User.Claims
								}
								<i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
							</div>
						</div>
						<div class="col-sm-8">
							<div class="card-block">
								<h6 class="m-b-20 p-b-5 b-b-default f-w-600">Information</h6>
								<div class="row">
									<div class="col-sm-6">
										<p class="m-b-10 f-w-600">Email</p>
										<h6 class="text-muted f-w-400">@Model.Email</h6>
									</div>
									<div class="col-sm-6">
										<p class="m-b-10 f-w-600">Phone</p>
										@if (Model?.Phone == null)
										{
											<h6 class="text-muted f-w-400">Still missing!!</h6>
										}
										else
										{
											<h6 class="text-muted f-w-400">@Model?.Phone</h6>
										}
									</div>
								</div>
								@if (Model.IsEmailConfirmed == false)
								{
									<div>
										<div class="text-center">
											<p class="justify-content: center"><strong>Confirm your Email</strong></p>
											<a type="button" class="btn btn-success" asp-action="ConfirmEmail">
												<i class="fas fa-check"></i>
												<span>Confirm</span>
											</a>
										</div>
									</div>
								}
								else
								{
									<div>
										<div class="text-center">
											<p class="justify-content: center"><strong>Thank you for confirming your account</strong></p>
										</div>
									</div>
								}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section Styles {
	<link href="~/css/profile-page/user-page.css" rel="stylesheet" />
}
