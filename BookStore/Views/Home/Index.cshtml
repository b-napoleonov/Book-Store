@model IEnumerable<HomeBookViewModel>

@{
	ViewData["Title"] = "Home Page";
	var books = Model.ToList();
	bool first = true;
}

<div class="text-center">
	<h1 class="display-4">Welcome</h1>
	<p>This is my <strong>BookStore Website</strong>. Here you can <i>view</i>, <i>rate</i> and <i>buy</i> books and ... <strong>express yourself</strong>.</p> <p color: #00FFFF>Enjoy!!!</p>
</div>

<canvas id="canvas" width="1200" height="360" style="position:center;border:1px solid;"></canvas>
<input type="button" value="Clear" class="canvas-clear btn btn-outline-danger" />

