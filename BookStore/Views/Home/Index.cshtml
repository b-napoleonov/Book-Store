<div class="mb-5"></div>

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
	<div class="carousel-inner">
		@foreach (var book in Model)
		{
			<div class="carousel-item @(first ? "active" : string.Empty)">

				<img class="d-block w-100" style="height:500px"
				 src="@book.ImageUrl" alt="@book.Title">
				<div class="carousel-caption d-none d-md-block">
					<h5>
						<a class="btn btn-primary" asp-controller="Book" asp-action="Details"
					   asp-route-bookId="@book.Id" asp-route-information="@book.GetInformation()"> @book.Title</a>
					</h5>
				</div>
			</div>

			first = false;
		}
	</div>
	<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="visually-hidden">Previous</span>
	</button>
	<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
		<span class="visually-hidden">Next</span>
	</button>
</div>

