@model DetailsBookViewModel

@{
	ViewBag.Title = "Book Details";
}

<div class="content-wrapper" style="min-height: 2646.8px;">

	<section class="content">

		<div class="card card-solid">
			<div class="card-body">
				<div class="row">
					<div class="col-12 col-sm-5">
						<div class="col-12">
							<img src=@Model.ImageUrl class="product-image" alt="Product Image">
						</div>

					</div>
					<div class="col-12 col-sm-7">
						<h3 class="my-3">@Model.Title</h3>
						<hr>

						<!-- Responsive Hover Table -->
						<div class="row">
							<div class="col-12">
								<div class="card">
									<div class="card-header">
										<h3 class="card-title">Responsive Hover Table</h3>

									</div>
									<!-- /.card-header -->
									<div class="card-body">
										<table class="table table-bordered">
											<thead>
												<tr>
													<th>Year</th>
													<th>Pages</th>
													<th>Author</th>
													<th>Publisher</th>
													<th>Categories</th>
												</tr>
											</thead>
											<tbody>
												<tr>
													<td>@Model.Year</td>
													<td>@Model.Pages</td>
													<td>
														<a class="link-primary" asp-action="Index" asp-route-authorName="@Model.Author">
															<span>@Model.Author</span>
														</a>
													</td>
													<td>
														<a class="link-primary" asp-action="Index" asp-route-authorName="@Model.Publisher">
															<span>@Model.Publisher</span>
														</a>
													</td>
													@foreach (var category in Model.Categories)
													{
														<td>
															<a class="link-primary" asp-action="Index" asp-route-authorName="@category">
																<span>@(string.Join(", ", category))</span>
															</a>
														</td>
													}
												</tr>
											</tbody>
										</table>
									</div>
									<!-- /.card-body -->
								</div>
								<!-- /.card -->
							</div>
						</div>
						<!-- Responsive Hover Table -->

						<div class="bg-gray py-2 px-3 mt-4">
							<h2 class="mb-0">
								@Model.Price
							</h2>

						</div>
						<div class="mt-4">
							<div class="btn btn-primary btn-lg btn-flat">
								<i class="fas fa-cart-plus fa-lg mr-2"></i>
								Add to Cart
							</div>

						</div>

					</div>
				</div>
				<div class="row mt-4">
					<nav class="w-100">
						<div class="nav nav-tabs" id="product-tab" role="tablist">
							<a class="nav-item nav-link active" id="product-desc-tab" data-toggle="tab" href="#product-desc" role="tab" aria-controls="product-desc" aria-selected="true">Description</a>
							<a class="nav-item nav-link" id="product-comments-tab" data-toggle="tab" href="#product-comments" role="tab" aria-controls="product-comments" aria-selected="false">Comments</a>
							<a class="nav-item nav-link" id="product-rating-tab" data-toggle="tab" href="#product-rating" role="tab" aria-controls="product-rating" aria-selected="false">Rating</a>
						</div>
					</nav>
					<div class="tab-content p-3" id="nav-tabContent">
						<div class="tab-pane fade active show" id="product-desc" role="tabpanel" aria-labelledby="product-desc-tab">@Model.Description</div>
